{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C/C++: g++ build active file",
            "type": "shell",
            "command": "/opt/homebrew/bin/g++-15",
            "args": [
                "-std=c++17",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-I/opt/homebrew/include/eigen3"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Compiler: Homebrew g++"
        }
    ]
}